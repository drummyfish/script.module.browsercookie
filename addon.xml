<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.browsercookie"
       name="browsercookie"
       version="0.6.3"
       provider-name="Richard Penman">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.python.module"
             library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary>Loads cookies from your browser into a cookiejar object so can download with urllib and other libraries the same content you see in the web browser.</summary>
    <source>https://bitbucket.org/richardpenman/browsercookie</source>
    <platform>all</platform>
    <license>LGPL</license>
  </extension>
</addon>
